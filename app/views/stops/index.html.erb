<h1>Bus Stops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
    </tr>
  </thead>
  <tbody>
    <% @stops.each do |stop| %>
      <tr>
        <td><%= stop.name %></td>
        <td><%= stop.latitude %></td>
        <td><%= stop.longitude %></td>
      </tr>
    <% end %>
  </tbody>
</table>